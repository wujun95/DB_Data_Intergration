<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.db.springcloud.dao.DataSourceDao">

    <select id="findAllDataSource" resultType="java.util.HashMap" >
        select name from datasource;
    </select>
    <select id="findDataSourceByname" parameterType="String" resultType="com.db.springcloud.entities.DbDataSource">
        select * from datasource where name = #{DataSourceName};
    </select>

    <select id="showMysqlDataBases" resultType="java.util.HashMap">
        show databases;
    </select>


    <select id="findTest" resultType="java.util.HashMap">
        select * from user;
    </select>

    <select id="showOracleDataBases" resultType="java.util.HashMap">
        show databases;
    </select>
</mapper>